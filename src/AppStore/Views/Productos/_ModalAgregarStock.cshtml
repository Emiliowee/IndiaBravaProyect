<div class="modal fade" id="agregarStockModal" tabindex="-1" aria-labelledby="agregarStockModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="agregarStockModalLabel">Agregar Stock</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="agregarStockForm">
                    <div class="mb-3">
                        <label for="productoId" class="form-label">Producto</label>
                        <select class="form-select" id="productoId" name="productoId" required>
                            <option value="">Seleccione un producto</option>
                            @foreach (var producto in Model)
                            {
                                <option value="@producto.IDProducto">@producto.Nombre</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="cantidadStock" class="form-label">Cantidad a agregar</label>
                        <input type="number" class="form-control" id="cantidadStock" name="cantidadStock" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="guardarAgregarStock">Agregar</button>
            </div>
        </div>
    </div>
</div>
